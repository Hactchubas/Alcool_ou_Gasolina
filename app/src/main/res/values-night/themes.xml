<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcoolOuGasolina" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#23648F</item>
        <item name="colorPrimaryVariant">#23648F</item>
        <item name="colorOnPrimary">#FF0000</item>
        <item name="colorPrimaryDark">#23648F</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2668A5</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/red_galon</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#23648F</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:backgroundTint">#0B183E</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.DayNight">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#0B183E</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

    </style>
</resources>